@model LoginViewModel

@{
    ViewData["Title"] = " Sign In";
}

<div class="page-header clear-filter">
    <div class="page-header-image">
    </div>
    <div class="content">
        <div class="container">
            <div class="col-md-4 col-lg-5 ml-auto mr-auto">
                <div class="card card-signup" data-background-color="orange">
                    <form class="form" asp-action="Login" asp-controller="Account">
                        <div class="card-header text-center">
                            <h2 class="card-title title-signup">@ViewData["Title"]</h2>
                            <p class="card-text">Welcome Back</p>
                        </div>
                        <div class="card-body">
                            <div class="input-group no-border input-lg">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-user-circle-o" style="color:ghostwhite !important;"></i>
                                    </span>
                                </div>
                                <input asp-for="Username" placeholder="Enter Username..." class="form-control" />
                            </div>
                            <span asp-validation-for="Username" class="text-white"></span>
                            <div class="input-group no-border input-lg">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-lock" style="color:ghostwhite !important;"></i>
                                    </span>
                                </div>
                                <input asp-for="Password" placeholder="Enter Password..." class="form-control" />
                            </div>
                            <span asp-validation-for="Password" class="text-white"></span>
                            <div class="form-check">
                                <label class="form-check-label" asp-for="RememberMe">
                                    <input class="form-check-input" asp-for="RememberMe">
                                    <span class="form-check-sign"></span>
                                    @Html.DisplayNameFor(x=>x.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button class="btn btn-neutral btn-round btn-lg btn-block">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}
