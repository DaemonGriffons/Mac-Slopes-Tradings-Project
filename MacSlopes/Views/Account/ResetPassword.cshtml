@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Your Password";
}


<div class="page-header clear-filter">
    <div class="page-header-image">
    </div>
    <div class="content">
        <div class="container">
            <div class="col-md-4 col-lg-5 ml-auto mr-auto">
                <div class="card card-signup" data-background-color="orange">
                    <form class="form" asp-action="Login" asp-controller="Account">
                        <input asp-for="Code" type="hidden"/>
                        <div class="card-header text-center">
                            <h2 class="card-title title-signup">@ViewData["Title"]</h2>
                            <p class="card-text">Reset The Password Associated with this account</p>
                        </div>
                        <div class="card-body">
                            <div class="input-group no-border input-lg">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="now-ui-icons ui-1_lock-circle-open" style="color: ghostwhite !important;"></i>
                                    </span>
                                </div>
                                <input asp-for="Password" placeholder="Enter new Password..." class="form-control"/>
                            </div>
                            <span asp-validation-for="Password" class="text-white"></span>
                            <div class="input-group no-border input-lg">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="now-ui-icons ui-1_lock-circle-open" style="color: ghostwhite !important;"></i>
                                    </span>
                                </div>
                                <input asp-for="ConfirmPassword" placeholder="Confirm your Password..." class="form-control"/>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-white"></span>

                        </div>
                        <div class="card-footer text-center">
                            <button class="btn btn-neutral btn-round btn-lg btn-block">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
