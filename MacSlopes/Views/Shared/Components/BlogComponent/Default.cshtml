@model IEnumerable<PostsIndexViewModel>
@{
}

<ul class="list-group list-group-flush">
    @foreach (var post in Model)
    {
        var src = $"/api/Images/{post.ImageUrl}";
        <li class="media my-3">
            <img src="@src" class="mr-2 img-fluid img-raised imageresize" alt="@post.Title Images" />
            <div class="media-body">
                <h5 class="mt-0 mb-1 font-weight-bold">@post.Title</h5>
                <a href="@post.Link" class="btn btn-link">Read More...</a>
            </div>
        </li>
    }
</ul>
