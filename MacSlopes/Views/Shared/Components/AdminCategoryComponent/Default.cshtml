@model UsersViewComponentViewModel
@{
    Layout = null;
}

    <div class="statistics">
        <div class="info">
            <div class="icon icon-danger">
                <i class="now-ui-icons design_bullet-list-67"></i>
            </div>
            <h3 class="info-title">@Model.UserCount</h3>
            @if (Model.UserCount == 1)
            {
                <h6 class="stats-title">Category</h6>
            }
            else
            {
                <h6 class="stats-title">Categories</h6>
            }
        </div>
    </div>